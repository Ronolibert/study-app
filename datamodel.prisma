type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  decks: [Deck!]
}

type Deck {
  id: ID! @unique
  title: String!
  description: String
  cards: [Card!]!
  owner: User!
}

type Card {
  id: ID! @unique
  term: String!
  definition: String!
}

type Folder {
  id: ID! @unique
  name: String!
  subfolder: Folder
}
